include /components/mixins/mixins.pug

section.main-container__basket.basket
  div.basket__container
    h2 Корзина 
    div.basket__content-block
      ul.basket__list.card
        li.card__item.card__item--basket(data-article='001')
          img(
            src="img/popular1@1x.jpg",
            srcset="img/popular1@1x.jpg 2x",
            alt="/"
          )
          div.card__content.card__content--basket
            div.card__item-text.card__item-text--basket
              h5 Внешний акумулятор
            div.card__item-price.card__item-price--basket
              span.card__item-price-value 700р
              button.card__item-price-button(type="button")
                svg
                  use(xlink:href=`img/icons/sprite.svg#shopping_basket`)
              div.card__item-price-button-block.button-click
                button.button-click__less
                  span -
                span.button-click__text 0
                button.button-click__more
                  span +
    div.basket__price-block
      a.basket__price-link(href="/")
        span Оформить заказ