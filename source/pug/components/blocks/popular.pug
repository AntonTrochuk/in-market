include /components/mixins/mixins.pug

section.main-container__popular.popular
  div.popular__container
    h2 Популярное
    ul.popular__list.card
      li.card__item(data-article='001')
        picture
          source(
            media="(max-width: 767px)",
            type="image/webp",
            srcset="img/popular1@1x.webp 1x, img/popular1@2x.webp 2x"
          )
          source(
            media="(max-width: 1023px)",
            type="image/webp",
            srcset="img/popular1@1x.webp 1x, img/popular1@2x.webp 2x"
          )
          source(
            type="image/webp",
            srcset="img/popular1@1x.webp 1x, img/popular1@2x.webp 2x"
          )
          source(
            media="(max-width: 767px)",
            type="image/jpg",
            srcset="img/popular1@1x.jpg 1x, img/popular1@2x.jpg 2x"
          )
          source(
            media="(max-width: 1023px)",
            type="image/jpg",
            srcset="img/popular1@1x.jpg 1x, img/popular1@2x.jpg 2x"
          )
          img(
            src="img/popular1@1x.jpg",
            srcset="img/popular1@1x.jpg 2x",
            alt="/"
          )
        div.card__content
          div.card__item-text
            h5 Внешний акумулятор
            p Внешний акумулятор бренда FaizFull
          div.card__item-price
            span 700р
            button.card__item-price-button(type="button")
              svg
                use(xlink:href=`img/icons/sprite.svg#shopping_basket`)
            div.card__item-price-button-block.button-click
              button.button-click__less
                span -
              span.button-click__text 1
              button.button-click__more
                span +
